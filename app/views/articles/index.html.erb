<h1 align="center">All Articles</h1>


<% @all_articles.each do |x| %>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <div class="well well-lg">
                <div class="article-title">
                    <%= link_to x.title, article_path(x) %>
                </div>
                <div class="article-body">
                    <%= truncate(x.description, length:100) %>
                </div>
                <div class="article-actions">
                    <%= link_to "Edit this article", edit_article_path(x), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Delete this article", article_path(x), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
